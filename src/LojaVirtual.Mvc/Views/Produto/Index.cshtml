@model IEnumerable<LojaVirtual.Mvc.ViewModels.Produtos.ProdutoViewModel>
@{
    ViewData["Title"] = "Lista de Produtos";
}

<h1>@ViewData["Title"] </h1>

@if (TempData["Sucesso"] != null || ViewData["Sucesso"] != null)
{
    var mensagem = TempData["Sucesso"] != null ? TempData["Sucesso"] : ViewData["Sucesso"];

    <div style="padding-top: 15px"></div>

    <div id="msg-box" class="alert alert-success">
        <h4 id=" msgRetorno">@Html.Raw(mensagem)</h4>
    </div>
}

<p>
    <a class="btn btn-primary" asp-action="Create"><span class="fa fa-plus"></span>Novo</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Nome)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Descricao)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Preco)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.QuantidadeEstoque)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Categoria)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ImagemUrl)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Nome)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Descricao)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Preco)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.QuantidadeEstoque)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Categoria)
                </td>
                <td>
                    @if (!string.IsNullOrEmpty(item.ImagemUrl))
                    {
                        <img src="@item.ImagemUrl" alt="Imagem do produto" style="max-height: 100px;" />
                    }
                </td>
                <td>
                    <a asp-action="Details" class="btn btn-warning" asp-route-id="@item.Id"><span class="fa fa-search"></span>Detalhes</a>
                    <a asp-action="Edit" class="btn btn-info" asp-route-id="@item.Id"><span class="fa fa-pencil-alt"></span>Editar</a>
                    <a asp-action="Delete" class="btn btn-danger" asp-route-id="@item.Id"><span class="fa fa-trash"></span>Excluir</a>
                </td>
            </tr>
        }
    </tbody>
</table>
